# Production Environment Configuration
# Copy this to .env and fill in actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=expense_tracker_production
DB_USER=expense_tracker_user
DB_PASS=your-secure-database-password
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-min-32-chars

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4-turbo

# CORS Configuration (Add your production domains)
ALLOWED_ORIGINS=https://app.expensetracker.com,https://www.expensetracker.com

# Server Configuration
SERVER_ENV=production
DEBUG_MODE=false
LOG_LEVEL=error

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Google OAuth2 (for email parsing)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
